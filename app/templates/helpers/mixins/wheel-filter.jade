mixin wf-tab(id, title, subtitle, active)
	.wf__tab.js-wf-tab(
		class=active?'wf__tab_active':''
		data-id=id
	)&attributes(attributes)
		.wf-tab
			.wf-tab__icon(class='wf-tab__icon_'+id)
			.wf-tab__label
				span.wf-tab__label-accent= title
				span= subtitle

