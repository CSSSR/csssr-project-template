mixin wf-tab(id, title, subtitle, active)
	.wf__tab.js-wf-tab(class=active?'wf__tab_active':'' data-id=id)
		.wf-tab
			.wf-tab__icon(class='wf-tab__icon_'+id)
			.wf-tab__label
				span.wf-tab__label-accent= title
				span= subtitle

mixin wheel-filter()
	.wf.js-wf
		.wf__tabs
			+wf-tab('car-model', 'Подбор', 'по марке авто', true)
			+wf-tab('tires', 'Подбор шин', 'по типоразмеру')
			+wf-tab('discs', 'Подбор дисков', 'по типоразмеру')
		.wf__body
			// подбор шин по марке авто
			.wf-body.wf-body_car-model.wf-body_active.js-wf-body.js-wf-body_car-model
