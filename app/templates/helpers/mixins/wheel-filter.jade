							.wf-col
								.wf-body__heading
									.h5.h_upcase Модель:

								.wf-body__input
									select.select_wide.js-wf-select.js-wf-select_model(disabled)

						.wf-row
							.wf-col
								.wf-body__heading
									.h5.h_upcase Год выпуска:

								.wf-body__input
									select.select_wide.js-wf-select.js-wf-select_year(disabled)

							.wf-col
