.your-cars
	.your-cars__wrap.your-cars__wrap_add.grid
		.your-cars__caption Добавить новый автомобиль:
		form.your-cars__inputs

			.your-cars__select
				.your-cars__label Марка:
				.your-cars__value
					+select([
						['Выберите', 0],
						['Вариант 1', 0],
						['Вариант 2', 0]
						])

			.your-cars__select.your-cars__select_model
				.your-cars__label Модель:
				.your-cars__value
					+select([
						['Выберите', 0],
						['Вариант 1', 0],
						['Вариант 2', 0]
						])

			.your-cars__select.your-cars__select_year
				.your-cars__label Год выпуска:
				.your-cars__value
					+select([
						['Все', 0],
						['Вариант 1', 0],
						['Вариант 2', 0]
						])

			.your-cars__select.your-cars__select_mod
				.your-cars__label Модификация:
				.your-cars__value
					+select([
						['Все', 0],
						['Вариант 1', 0],
						['Вариант 2', 0]
						])

			.your-cars__submit
				button.btn.btn_primary Сохранить

			.your-cars__cancel
				+btn('Отменить')
