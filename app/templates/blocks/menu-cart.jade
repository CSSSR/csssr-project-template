							img(src='/assets/images/discont-cart.png')

					.cart-product__description
						.cart-product__title Bridgestone Ecopia EP200
						.cart-product__params 215/55 R16 93W

			.menu-cart__product
				.cart-product
					.cart-product__delete-btn.cart-product__delete-btn_option

					.cart-product__costs.cart-product__costs_option
						.cart-product__total-cost 14 280
							+icon('rub').currency
						.cart-product__per-cost 4 200
							+icon('rub').currency
							|/шт.

					.cart-product__counter.cart-product__counter_option

					.cart-product__img
						img(src='/assets/images/content/menu-cart-product.png' alt='Шина')
						span.cart-product__label
							img(src='/assets/images/discont-cart.png')

					.cart-product__description.cart-product__description_option
						.cart-product__title Bridgestone Ecopia EP200
						.cart-product__params 215/55 R16 93W
						.cart-product__option
							input(type='checkbox' id='ch2' checked).checkbox
							label(for='ch2').checkbox__label Добавить комплект крепежа (+ 1 500 р.)
							.cart-product__tooltip
								.info
									.info__btn.btn.btn_info(tabindex=0): +icon('info').btn__icon
									.info__tooltip
										.tooltip Сообщение о прекрасном

			.menu-cart__product
	.menu-cart__delivery
		.menu-cart__another-city
			+btn('Рассчитать в другой город',true)

		.menu-cart__pick-points
			+btn('Точки самовывоза', true)

		.menu-cart__delivery-conditions
			.menu-cart__delivery-cost Стоимость доставки по Москве:
				span.menu-cart__delivery-cost-value 450 р.
			.menu-cart__delivery-date Приблизительный срок:
				span.menu-cart__delivery-date-value 1 - 2 дня

	.menu-cart__summary
		.menu-cart__order
			button.btn.btn_primary Оформить заказ
		.menu-cart__cost-remark Без учета доставки!
