					.cart-product__delete-btn

					.cart-product__costs
						.cart-product__total-cost 14 280
							+icon('rub').currency
						.cart-product__per-cost 4 200
							+icon('rub').currency
							|/шт.

					.cart-product__counter

					.cart-product__img
						img(src='/assets/images/content/menu-cart-product.png' alt='Шина')
