.radio, .checkbox
  background url(../images/radio-checkbox2.png) no-repeat
  width 12px
  height 12px
  margin 0 7px 0 0
  float left
  overflow hidden

.radio
  height 26px
  width 26px
  background-position 0 -25px

  &-checked
    background-position 0 0

.checkbox
  width 23px
  height 28px
  background-position -26px -26px

  &-checked
     background-position -26px 1px

.rc-hidden
  position absolute
  left -999em

