body
	padding-top 20px
	padding-bottom 20px
	color #000
	font-family cuprum, sans-serif
	background-color #f0f0f0
	background-image url(../images/chruch.png)
	cursor default

	@media screen and (max-width: 540px)
		padding-top 0
		padding-bottom 0

.main
	margin-left auto
	margin-right auto
	padding 20px
	max-width 540px
	font-size 16px
	border-radius 4px
	background-color #fff
	box-shadow 0 0 8px rgba(0, 0, 0, .5)

	&::selection
		background-color #ffffd0

	@media screen and (max-width: 540px)
		padding-top 40px
		padding-bottom 40px
		border-radius 0
		box-shadow none

.logo
	height 180px
	background url(../images/logo.jpg) 50% -20px no-repeat
	margin-left -20px
	margin-right -20px

.h1
	margin-left -20px
	margin-right -20px
	margin-bottom 20px
	padding 20px
	font-size 28px
	font-weight bold
	text-align center

.h2
	margin-bottom 20px
	font-size 20px
	font-weight bold
	text-align center

.h3
	margin-bottom 10px
	padding-left 20px
	padding-right 20px
	font-size 18px
	font-weight bold

	@media screen and (max-width: 540px)
		text-align center

.description
	margin-bottom 40px
	font-size 18px
	text-align center

.mark
	padding 0 4px
	font-weight bold
	text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
	border-radius 4px
	background-color #e8e8e8

	&::selection
		background-color rgba(0, 0, 0, .1)
