.model-list

	&__caption
		font-family $heading-fonts
		font-weight 700
		font-size 26px
		text-transform uppercase
		color black


	&__table
		margin-top 38px
		clearfix()

	&__column
		float left
		width gridWidth(3)
		margin-right 20px

		&:last-child
			margin-right 0

	&__item
		height 50px
		cursor pointer

		&:before
			display inline-block
			height 100%
			vertical-align middle
			content ''

		&:hover
			background-color $rushina-yellow

	&__model-name
		display inline-block
		margin-left 30px
		line-height 14px
		vertical-align middle
		border-bottom 1px dotted black
		font-family $heading-fonts
		font-weight bold
		color black


