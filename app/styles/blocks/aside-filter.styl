.aside-filter
	position relative
	width 180px
	border 3px solid #ebebeb
	padding-bottom 14px

	&__info
		display inline-block
		margin-right 10px

	&__block
		border-top 3px solid #ebebeb
		padding-left 18px
		margin-top 10px
		&:first-child
			margin-top 0
			border-top none
		& > p.hide
			display none

	&__title
		font-family $heading-fonts
		font-weight bold
		color #000
		font-size 14px
		text-transform uppercase
		padding-top 22px
		padding-bottom 5px

	&__show
		color #0f7cf0
		text-decoration none
		border-bottom 1px dotted #0f7cf0
		position relative
		display inline-block
		margin-bottom 13px
		margin-top 6px
		&:after
			position absolute
			content ''
			top 9px
			right -16px
			sprite $arrow-down
		&.hide:after
			transform rotate(180deg)
			top 8px

	&__checkbox
		& + label
			line-height 30px
		& + label:before
			height 18px
			width 18px
			background-size 36px 90px
			top 5px
			margin-right 0.62em

		&:not(:disabled)
			&:hover + label:before
				background-position 0 -18px

			&:checked + label:before
				background-position -18px 0

			&:checked:hover + label:before
				background-position -18px -18px

			&:checked:active + label:before
				background-position -18px -36px

		&:disabled

			& + label
				color #cccccc

			& + label:before
				background-position 0 -72px
