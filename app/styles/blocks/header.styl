$header-height = 50px
$header-flow-height = 70px

.header
	background-color #616161
	color white
	
	&__wraper
		position relative
		width 1180px
		height $header-height
		margin-right auto
		margin-left auto 
		
		&:before
		&:after
			position absolute
			width 1px
			height 100%
			content ''
			top 0
		
		&:before
			background-image linear-gradient(#343434, transparent);
			left -1px
		
		&:after
			background-image linear-gradient(#7e7e7e, transparent);
			right -1px
		
		&_flow
			height $header-flow-height

	&:after
		display table
		clear both
		content ''

	&__logo
		width 226px
		height 100%
		vertical-align middle

	&__icon
		width 42px
		height 100%
		margin-right 9px
		vertical-align middle
		fill white
	
		&_type-nolabel
			margin-right 0
			
	&__label
		vertical-align middle
	
	&__contact
		display inline-block
		vertical-align middle

	&__container
		position absolute
		left 0
		z-index 1
		display none
		
	&__tab
		position relative
		float left
		height 100%
		padding-left 5px
		padding-right 5px
		text-align center
		box-shadow inset 0 -3px 3px #5c5c5c 
		
		&:after, &:before
			position absolute	
			top 0		
			height 100%
			width 1px 
			content "" 
			
		&:before
			background-image linear-gradient(#7e7e7e, transparent);
			left 0
		
		&:after
			background-image linear-gradient(#343434, transparent);
			right 0
			
		
			
		&:hover
			cursor pointer
			box-shadow none
			background-color #757575
				
			.header__icon
				fill #fcd430
				
			.header__label
				color #fcd430
				
			.header__container
				display block

		&_type-car
			width 18.4%
		
		&_type-compare
			width 14%
		
		&_type-seen
			width 17.4%
		
		&_type-feedback
			width 16.2%
		
		&_type-login
			width 17.5%
			
		&_type-cart
			//width 16.5%
			float none
			overflow hidden
		
		&_type-logo
			
			
			&:before
				content none
			
			&:hover
				color inherit		