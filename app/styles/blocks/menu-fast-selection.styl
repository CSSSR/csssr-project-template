.menu-fast-selection
	background-color $rushina-gray
	color white

	&__wrap
		padding-top 20px
		padding-left 20px
		padding-right 20px
		padding-bottom 26px

	&__caption
		margin-bottom 20px
		font-family $heading-fonts
		font-size 14px
		font-weight bold
		text-transform uppercase

	&__container
		display table
		width 100%

	&__left-col
		display table-cell
		width 257px
		border-right 1px solid #333
		vertical-align top

	&__right-col
		display table-cell
		padding-left 35px
		vertical-align top
		background-image url('/assets/images/fast-selection-bg.png')
		background-repeat no-repeat
		background-position 504px 22px

	&__col-item
		margin-bottom 20px

		&:last-child
			margin-bottom 0

		&_links
			margin-bottom 30px

		&_switch
			margin-bottom 17px

	&__switch
		width 420px
		margin-top -3px
		margin-left -3px
		font-family $heading-fonts
		font-weight 700
		text-transform uppercase

.menu-fast-links
	&__level-item
		margin-top 10px
		font-weight 700
		text-transform uppercase

		&:first-child
			margin-top 0

		&_sub
			font-weight 400
			text-transform none

			&:first-child
				margin-top 10px

.type-links
	&__item
		height 40px
		margin-bottom 10px

		&:last-child
			margin-bottom 0

	&__icon
		width 45px
		height 100%
		margin-right 12px
		vertical-align middle
		fill white

	&__label
		vertical-align middle
		width 159px
		padding-left 5px
		padding-right 0px
		font-family $text-fonts
		font-weight 700

	&__btn
		display inline-block
		margin-left -4px

.manufacturers-list
	display table
	width 100%
	margin-left -4px

	&__col
		display table-cell
		width 190px
		font-weight 700

		&_second
			margin-left 5px

		&_last
			width 140px

	&__item
		margin-bottom 10px

		&:last-child
			margin-bottom 0

	&__all
		margin-top 40px
