.top-search
	display block
	height 170px
	font-family 'PT Sans'
	font-weight bold

	&__item
		display block
		float left

	&-logo
		width 330px
		height 170px
		background url(../images/svg/1_logo_dark.svg) no-repeat left center
		background-size 311px 73px

	&-input
		padding 65px 29px 10px 280px
		width 549px
		height 170px
		font-weight normal
		background url(../images/map.png) no-repeat left 4px
		& .search__input
			height 42px

	&-phone
		width 217px
		line-height 168px
		font-size 22px
		letter-spacing -.1px
		color #000

	&-workhours
		position relative
		margin-top 58px
		width 75px
		height 54px
		background url(../images/workhours.png) no-repeat
		&-caption
			position absolute
			left 30px
			display block
			width 66px
			font-size 12px
			color #3a3a3a
			letter-spacing -.3px
			&_weekday
				top 7px
			&_weekend
				top 32px
