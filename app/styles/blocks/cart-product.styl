.cart-product
	display table
	width 100%

	&__col
		display table-cell
		vertical-align top

		&_img
			width 112px

		&_delete
			width 41px
			padding-top 30px

		&_delete-option
			width 41px
			padding-top 10px

		&_description
			vertical-align middle

		&_costs
			width 145px
			padding-top 22px

		&_costs-option
			width 145px
			padding-top 5px

		&_counter
			width 137px
			padding-top 30px

		&_counter-option
			width 137px
			padding-top 10px

	&__img-container
		position relative
		vertical-align middle

	&__img
		vertical-align top
		width 96px
		height 100px

	&__label
		position absolute
		left -7px
		top 10px
		z-index 1

	&__delete-btn
		sprite($close-icon-compare)
		cursor pointer

	&__costs
		font-family  $heading-fonts
		font-size 20px
		font-weight 700
		color white

	&__per-cost

		.currency
			width 12px
			height 14px
			margin-left 1px
			fill white

	&__total-cost
		margin-left 1px
		padding-bottom 10px

		.currency
			width 12px
			height 14px
			margin-left 5px
			fill white

	&__counter
		width 106px
		height 40px
		background-color white

	&__description
		vertical-align middle
		margin-top 5px
		margin-left 4px
		font-family $heading-fonts
		font-size 20px
		font-weight 700
		color white

		&_option
			margin-top 10px

	&__title
		display block
		margin-top -10px
		padding-bottom 11px
		text-decoration underline
		color white

	&__params
		display block
		font-family $text-fonts

	&__option
		position relative
		padding-top 4px

		.checkbox__label
			font-family $text-fonts
			font-size 14px
			font-weight 400
			color white

	&__tooltip
		position absolute
		right -23px
		top 50%
		margin-top -7px

		.btn__icon
			width 5px
			height 20px
			fill white

		.info__tooltip
			font-family $text-fonts
			font-weight 400
			font-size 14px

			.tooltip
				max-width 280px
