.add-car
	position relative
	width 263px
	height 150px
	overflow hidden
	border-radius 5px
	background-color $rushina-gray
	border 3px solid white
	text-align center
	color white
	cursor pointer

	&_filled
		border-color #696969
		border-radius 0
		cursor default

	&__bg
		width 110px
		margin-left 175px
		opacity .1

	&__content
		position absolute
		left 0
		top 0
		width 100%
		height 100%

		&:hover
			.add-car__label
				display block

		&_filled
			padding-top 14px
			padding-right 26px
			padding-left 26px
			text-align left

	&__label
		display none
		margin-top 62px
		margin-left 5px
		font-family $heading-fonts
		font-weight 700
		text-transform uppercase
		user-select none

	&__model
		overflow hidden
		height 20px
		font-weight 700

	&__year
		margin-top 9px

	&__year-value
		overflow hidden
		height 20px

	&__modification
		margin-top 9px

	&__mod-value
		overflow hidden
		height 20px
