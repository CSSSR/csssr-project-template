.advantages
	padding 20px 30px
	font-family $heading-fonts
	font-weight bold
	line-height 20px
	text-transform uppercase

	&__content
		display block
		height inherit
		color #000
		font-family $heading-fonts
		font-weight bold
		text-transform uppercase
		line-height 20px

	&__slider
		background $rushina-light-gray url(../images/advantages_bg.jpg) no-repeat top center
		background-clip border-box

	&__title
		text-align center
		margin-top 10px
		margin-bottom 63px
		padding-top 29px
		font-size 20px
		color #d7a235

	&__block
		position relative
		display block
		margin-bottom 51px
		margin-left auto
		margin-right auto
		padding-left 178px
		&_cards
			margin-bottom 39px
		&_wheels
			margin-bottom 50px

	&__img
		position absolute
		&_deliver
			sprite $advantages_deliver
			top -3px
			left 14px
		&_cards
			sprite $advantages_cards
			top -10px
			left 52px
		&_wheels
			sprite $advantages_wheels
			top -5px
			left 46px
		&_guarantee
			sprite $advantages_guarantee
			top -19px
			left 46px

	&__caption
		font-size 14px
		color #272727
