.feedback
	width 258px

	&__icon
		width 31px
		height 51px
		margin-right 20px
		vertical-align middle
		fill white

	&__label
		vertical-align middle

	&__item
		height 51px
		padding-left 40px
		text-align left
		background-color #757575
		border-bottom 1px solid #686868
		border-top 1px solid #7b7b7b
		select-none()

		&:first-child
			border-top none

		&:hover
			background-color #fcd430
			border none

			.feedback__icon
				fill #757575

			.feedback__label
				color #757575
