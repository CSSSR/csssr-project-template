.btn
	display block
	width 100%
	padding .8em 1em

	font-family $heading-fonts
	text-transform uppercase

	background transparent
	border none
	border-radius 3px
	box-shadow inset 0 0 0 3px $yellow
	cursor pointer

	&:not(:disabled):hover
		background-color $yellow

	&:disabled
		color $gray
		box-shadow inset 0 0 0 3px $light-gray
		cursor not-allowed

	&_style
		&_skeuo
			color #000
			text-shadow 0 1px 0 rgba(255,255,255,.75)

			background-color $yellow
			background-image $primary-gradient
			border none
			box-shadow inset 0 1px 0 #fff, inset 0 -2px 0 #9c7b01

			&:hover
			&:active
				background-image none

			&:active
				box-shadow inset 0 2px 0 #9c7b01, 0 1px 0 #fff

			&:disabled
				background-color $light-gray
				background-image none
				box-shadow inset 0 1px 0 #fff, inset 0 -2px 0 $gray

