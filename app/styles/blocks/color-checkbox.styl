.color-checkbox
	display inline-block

	&__input
		display none

		&:checked + label:before
			display block

	&__label
		position relative
		display block
		width 27px
		height 27px
		cursor pointer

		&:before
			position absolute
			content ''
			top -4px
			bottom -4px
			left -4px
			right -4px
			border 2px solid #000
			display none

		&.black
			background-color #000000
		&.green
			background-color #32a232
		&.purpure
			background-color #9a3d96
		&.fiolet
			background-color #673266
		&.red
			background-color #e50607
		&.yellow
			background-color #fdd42e
		&.grey
			background-color #e2e2e2
		&.white
			background-color #ffffff
