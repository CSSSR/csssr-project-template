$rating-scale = 1.6
$height = (1ex * $rating-scale)
$width = (5 * $height)

.rating
	display inline-block
	vertical-align baseline
	position relative
	height $height
	width $width
	user-select none

	&__stars
		position relative
		display block
		height 100%
		width 100%
		bottom -0.2ex

		&::before
			content ''
			display block
			position absolute
			right 0
			width 100%
			height 100%
			background url('../images/svg/rating.svg') no-repeat top right
			background-size $width $height

		&::after
			content ''
			display block
			position absolute
			left 0
			width 100%
			height 100%
			background url('../images/svg/rating-on.svg') no-repeat top left
			background-size $width $height

		&[data-value='0']
			&::before
				width 100%
			&::after
				width 0

		&[data-value='1']
			&::before
				width 80%
			&::after
				width 20%

		&[data-value='2']
			&::before
				width 60%
			&::after
				width 40%

		&[data-value='3']
			&::before
				width 40%
			&::after
				width 60%

		&[data-value='4']
			&::before
				width 20%
			&::after
				width 80%

		&[data-value='5']
			&::before
				width 0
			&::after
				width 100%

	&_interactive
		cursor pointer
