$columns = 12

.grid
	width gridWidth($columns)
	margin-left auto
	margin-right auto
	padding 0 10px
	box-sizing content-box

for $i in 1..12
	.grid-module-{$i}
		width gridWidth($i)

.cols
	display table
	margin-left -($module-gap)

.col
	display table-cell
	box-sizing content-box
	padding-left $module-gap
	vertical-align top

