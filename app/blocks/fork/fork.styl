.fork
	&::selection
		background-color transparent

	+from-width(541px)
		position absolute
		top 0
		right 0
		display block
		height 200px
		width 200px
		overflow hidden

	&__link
		padding 5px 40px
		display block
		font-family arial, sans-serif
		font-size 1em
		line-height 2em
		font-weight bold
		text-align center
		text-decoration none
		transition background .25s ease-out, color .25s ease-out

		+mobile()
			margin-top 40px
			color #e74c3c
			border-radius 4px

			&:active
				transform scale(.975)

		+from-width(541px)
			position absolute
			top 50px
			right -54px
			width 250px
			color #fff
			background-color #222
			background-image url('../images/vertical-cloth.png')
			box-shadow 0 0 8px rgba(0, 0, 0, .5)
			transform rotate(45deg)

			&:before
			&:after
				position absolute
				top 1px
				left 0
				display block
				width 100%
				height 1px
				background-color #fff
				content ''

			&:after
				top auto
				bottom 1px

		&:hover
			color #fff
			background-color #e74c3c
			background-image none
