.main
	margin-left auto
	margin-right auto
	padding-top 20px
	max-width 540px
	font-size 16px
	border-radius 4px
	background-color #fff
	box-shadow 0 0 8px rgba(0, 0, 0, .5)

	&::selection
		background-color #ffffd0

	+mobile()
		padding-top 40px
		padding-bottom 0
		border-radius 0
		box-shadow none
