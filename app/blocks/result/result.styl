.result
	display block

	&__text
		margin-x(auto)
		margin-bottom 15px
		padding-top 30px
		width 500px
		font-size 16px
		font-weight 600
		line-height 1.49
		text-align center
		color charcoal-grey

	&__btn
		margin-x(auto)
		margin-y(30px)
		display block
		width 163px
		height 34px
		font-size 14px
		line-height 34px
		text-align center
		text-decoration none
		color #ffffff
		background-color soft-blue
		border none


@media (max-width: 641px)
	.result
		&__btn
			position fixed
			right 0
			left 0
			bottom 0
			margin-bottom 0
			width 100%
			height 48px
			line-height 48px

		&__text
			margin-bottom 24px
			padding-top 15px
			width 290px
